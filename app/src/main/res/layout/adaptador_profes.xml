<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp "
        android:layout_height="120dp"
        android:id="@+id/ImgProfe"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/TxtNombreLst"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DESCRIPCION DE PRUEBA DESCRIPCION DE PRUEBA"
        android:id="@+id/TxtDescripLst"
        android:maxLines="2"
        android:shadowColor="#050505"
        android:layout_below="@+id/TxtNombreLst"
        android:layout_alignLeft="@+id/TxtNombreLst"
        android:layout_alignStart="@+id/TxtNombreLst"
        android:paddingTop="12dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ES"
        android:id="@+id/TxtIdiomaLst"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_alignLeft="@+id/TxtDescripLst"
        android:layout_alignStart="@+id/TxtDescripLst"
        android:layout_alignBottom="@+id/TxtDescripLst"
        android:layout_alignRight="@+id/TxtDescripLst"
        android:layout_alignEnd="@+id/TxtDescripLst"
        android:background="#2d2d2d"
        android:layout_below="@+id/TxtDescripLst"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horarios"
        android:id="@+id/TxtHorarioLst"
        android:layout_below="@+id/space"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:layout_toLeftOf="@+id/TxtIdiomaLst"
        android:layout_toStartOf="@+id/TxtIdiomaLst" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="nombre"
        android:id="@+id/TxtNomProfeLst"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/TxtNumAlumLst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ImgProfe"
        android:layout_alignEnd="@+id/ImgProfe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Alumn"
        android:id="@+id/TxtNumAlumLst"
        android:layout_below="@+id/ImgProfe"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RatingLst"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1.0"
        android:layout_alignTop="@+id/TxtNomProfeLst"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/TxtNomProfeLst" />
</RelativeLayout>
